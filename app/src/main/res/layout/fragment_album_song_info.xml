<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".search.album.AlbumSongInfoFragment">

    <com.github.florent37.materialviewpager.MaterialViewPager
        android:id="@+id/materialViewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:fitsSystemWindows="true"
        app:viewpager_color="@color/actionBarColor"
        app:viewpager_disableToolbar="false"
        app:viewpager_header="@layout/album_info_header"
        app:viewpager_headerHeight="300dp"
        app:viewpager_hideToolbarAndTitle="false"
        app:viewpager_animatedHeaderImage="false"
        app:viewpager_headerAdditionalHeight="-13dp"
        app:viewpager_pagerTitleStrip="@layout/material_view_pager_pagertitlestrip_standard" />

</FrameLayout>